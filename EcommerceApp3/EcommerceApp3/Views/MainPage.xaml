<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:EcommerceApp3.ViewModels" x:DataType="viewmodels:MainPageViewModel"
             x:Class="EcommerceApp3.Views.MainPage"
             >

    <RelativeLayout>
        <StackLayout >
            <Image Source="first.png"  HeightRequest="400" WidthRequest="400" HorizontalOptions="CenterAndExpand"/>
            <Button x:Name="logIn" FontSize="Medium" BorderColor="Black" 
                    CornerRadius="30" Text="Login" TextColor="White" 
                    BackgroundColor="Purple"  Margin="10" Padding="5" VerticalOptions="Center"  Command="{Binding LogInCommand}"/>

            <Label Text="New User:" FontSize="15" TextColor="Black" BackgroundColor="Transparent" HorizontalOptions="Center"/>
            <Button x:Name="SignUp" FontSize="Medium" BorderColor="Black" 
                    CornerRadius="30" VerticalOptions="Center" Text="SignUp" TextColor="White" 
                    BackgroundColor="purple"  Margin="5" Command="{Binding SignUpCommand}"/>


        </StackLayout>
    </RelativeLayout>

</ContentPage>